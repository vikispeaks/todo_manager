<section>
    <h2> <%= section_title %> <span class="additional-info"><%= todos.completed.count %> / <%= todos.count %></span></h2>
    <ul class="todo-group">
        <% todos.each do |todo| %>
            <li class="todo-item">
                <input type="checkbox" <%= todo.completed ? 'checked' : nil %>/>
            <label class="todo-item-label">
                <span class="<%= todo.completed ? "completed" : "incomplete" %>">
                    <%= todo.todo_text %>
                </span>
                <% if show_date %>
                    <span class="todo-item-date">
                        <%= todo.due_date.to_fs(:short) %>
                    </span>
                <% end %>
            </label>
            <img
                class="delete-icon"
                src="delete.png"
                alt="Delete Todo"
            />
            </li>
        <% end %>
    </ul>
    
</section>